{
  "name": "pr-of-it/t4-app-mini",
  "description": "Minimal web-application based on T4 framework",
  "type": "project",
  "license": "LGPL-3.0",
  "authors": [
    {
      "name": "Alber Stepantsev",
      "email": "admin@pr-of-it.ru",
      "role": "Developer"
    }
  ],
  "repositories": [ {
    "type": "package",
    "package": {
      "name": "jsondoc/jsondoc",
      "version": "1.0.0",
      "source": {
        "url": "https://github.com/gembux2012/jsondoc",
        "type": "git",
        "reference": "master"
      }
    }
  }],
  "support": {
    "forum": "http://pr-of-it.ru/forum/"
  },
  "require": {
    "jsondoc/jsondoc": "1.0.*",
    "pr-of-it/t4": "dev-master"
  },
  "scripts": {
    "docker:build": [
      "@docker:start",
      "docker-compose exec -T app php protected/t4.php CreateTables/Init",
      "echo \"All ok!\""
    ],
    "docker:start": [
      "docker-compose up --force-recreate -d"
    ]

  }
}
